         <children>
            <TextField fx:id="VariableText" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#specValueAction" prefHeight="26.0" prefWidth="800.0" promptText="Calculate for specific value" />
         </children>
      </HBox>
   </bottom>
   <center>
      <Pane fx:id="pane" minHeight="1.0" minWidth="1.0" prefHeight="1.0" prefWidth="1.0" BorderPane.alignment="CENTER" />
